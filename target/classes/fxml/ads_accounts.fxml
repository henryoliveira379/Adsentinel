<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.adsentinel.presentation.desktop.AdsController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="Gestão Google Ads">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#handleAddAccount" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="+ Nova Conta Ads" />
         </children>
      </HBox>
      <TableView fx:id="adsTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="accountIdColumn" prefWidth="150.0" text="ID Conta" />
          <TableColumn fx:id="gmailColumn" prefWidth="250.0" text="Gmail Vinculado" />
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
            <TableColumn fx:id="phaseColumn" prefWidth="150.0" text="Fase" />
            <TableColumn fx:id="checklistColumn" prefWidth="80.0" text="Checklist" />
            <TableColumn fx:id="actionColumn" prefWidth="200.0" text="Ações" />
        </columns>
      </TableView>
   </children>
</VBox>
