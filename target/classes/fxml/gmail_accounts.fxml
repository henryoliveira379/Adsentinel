<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.adsentinel.presentation.desktop.GmailController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="Gestão de Contas Gmail">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#handleAddAccount" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="+ Nova Conta" />
         </children>
      </HBox>
      <TableView fx:id="gmailTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="emailColumn" prefWidth="250.0" text="Email" />
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
            <TableColumn fx:id="warmingColumn" prefWidth="100.0" text="Dias Aque." />
            <TableColumn fx:id="notesColumn" prefWidth="200.0" text="Observações" />
            <TableColumn fx:id="actionColumn" prefWidth="120.0" text="Ações" />
        </columns>
      </TableView>
   </children>
</VBox>
